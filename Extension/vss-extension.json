{
  "manifestVersion": 1,
  "id": "github-tools",
  "version": "0.0.0",
  "name": "GitHub Tool",
  "description": "Create or modify GitHub Release, allowing to upload assets, check manifest content and more.",
  "publisher": "marcelo-formentao",
  "public": "true",
  "icons": {
    "default": "images/icon128.png",
    "large": "images/icon512.png"
  },
  "targets": [
    {
      "id": "Microsoft.VisualStudio.Services"
    }
  ],
  "tags": ["GitHub", "Modify", "Create", "Release"],
  "categories": ["Build and release"],
  "content": {
    "license": {
      "path": "LICENSE.txt"
    },
    "details": {
      "path": "OVERVIEW.md"
    }
  },
  "links": {
    "getstarted": {
      "uri": "https://github.com/marceloavf/github-tools-vsts/wiki"
    },
    "support": {
      "uri": "https://github.com/marceloavf/github-tools-vsts/issues"
    }
  },
  "repository": {
    "type": "git",
    "uri": "https://github.com/marceloavf/github-tools-vsts"
  },
  "branding": {
    "color": "#5558af",
    "theme": "dark"
  },
  "files": [
    {
      "path": "Tasks"
    },
    {
      "path": "images",
      "addressable": true
    }
  ],
  "scopes": ["vso.build_execute", "vso.serviceendpoint_manage"]
}
